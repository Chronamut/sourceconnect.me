.row-fluid.dform1.centered
  %h2.bump2.glow Sign in
  = simple_form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => {:class => 'form-horizontal' }) do |f|
    .form-inputs
      =f.input :login, :required => true, :autofocus => true, :label => false, :placeholder => 'Login'
      = f.input :password, :required => false, :label => false, :placeholder => 'Password'
      .dform2
        = f.button :submit, "Sign in", :class => 'btn btn-primary'
        = link_to "Sign In With Facebook", user_omniauth_authorize_path(:facebook), :class => 'btn btn-primary'
        -if devise_mapping.registerable?
          =link_to "Sign Up", new_registration_path(resource_name), :class => 'btn'
        -if devise_mapping.recoverable?
          =link_to "Forgot Password?", new_password_path(resource_name), :class => 'btn'
           
= render "devise/shared/links"