
- unless user_signed_in?
	.row-fluid
		.hero-unit
			%h1 Welcome to Source.
			%p We're a community dedicated to learning, sharing, and self-discovery.
			%p
				=link_to 'Learn more', '#', :class => 'btn-primary btn-large offset2'

.row.centered#postcontainer
	-Post.order('last_comment_at')
	- @posts.each do |f|
		.span3.postbox.bump2
			.bump
				%h2.divide= f.title
				%p= truncate(strip_tags(f.body), :length => Random.rand(200..300))
				%p
					=link_to 'More...', f, :class => "btn"
				%p
					%small
						Last updated #{time_ago_in_words(f.last_comment_at)} ago


- if user_signed_in?
	= link_to 'New Post', new_post_path

:javascript
	$('#postcontainer').masonry({
		itemSelector: '.postbox',
		columnWidth: 0,
		isanimated: true
	});