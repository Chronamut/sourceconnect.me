<div class="row">
  <h1>
    <%= @post.title %>
  </h1>
</div>

<p class="meta">
  Posted by: <%= @post.user.email %> On <%= @post.created_at %>
</p>
<div id="post-body">
  <%= @post.body %>
</div id="post-body">

<h2>Comments</h2>
<% @post.comments.each do |comment| %> 
  <p>
    <b>Comment by <%= comment.user.email %></b>
    <%= comment.body %>
  </p>
<% end %>

<h2>Add a comment:</h2>
<%= form_for([@post, @post.comments.build]) do |f| %>
  <div class="field">
    <%= f.label :body %><br />
    <%= f.text_area :body %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

<% if user_signed_in? && @post.user == current_user %>
<%= link_to 'Edit', edit_post_path(@post) %>
<% end %>
<%= link_to 'Back', posts_path %>